package com.merge;

public class Merge {
	static void merge(int[] a,int l,int m,int r) {
		int len1 = m-l;
		int len2 = r-m;
		int[] left = new int[len1];
		int[] right = new int[len2];
		for(int i=0;i<len1;i++) {
			left[i]=a[l+i];
		}
		for(int i=0;i<len2;i++) {
			right[i]=a[m+i];
		}
		int i=0;
		int j=0;
		int k=l;
		while(i<len1 && j<len2) {
			if(a[i]<a[j]) {
				a[k]=a[i];
				i++;
			}else {
				a[k]=a[j];
				j++;
			}k++;
		}
		while(i<len1) {
			a[k]=a[i];
			i++;
			k++;
		}
		while(j<len2) {
			a[k]=a[j];
			j++;
			k++;
		}
		
	}
	static void sort(int[] a,int l,int r) {
		if(l<r) {
			int m=(l+r)/2;
			sort(a,l,m);
			sort(a,m+1,r);
			merge(a,l,m,r);
		}
	}
	public static void main(String[] args) {
		int[] a= {21,1,32,9,89,-2,-32};
		int len = a.length/2;
		sort(a,0,len);
		int m=(l+r)/2;
		merge(a,0,m,len-1);
		for(int i:a) {
			System.out.print(i+",");
		}
	}

}
